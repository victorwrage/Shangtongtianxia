<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:id="@+id/qr_title_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/qr_avatar_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profit_icon_avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/qr_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:text="zdv"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/qr_add_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="南山区粤海街道" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/qr_qcode_iv"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_below="@id/pay_qcode_title"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/qcode" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_below="@id/qr_qcode_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/big_btn_backgroud"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qr_scan_tv"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="分享名片"
                    android:textColor="@color/white" />


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/qr_header_lay"
        layout="@layout/header_lay" />

</RelativeLayout>