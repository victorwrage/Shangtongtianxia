<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_lay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/shangtongtianx_txt"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/header_btn_lay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/big_btn_backgroud_blue"
            android:gravity="center">

            <ImageView
                android:id="@+id/header_left_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/map_filter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/header_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/back"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/header_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/header_search_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center|left"
                android:background="@drawable/search_bg"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:text="请输入消费关键字"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/header_edit_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/header_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_setting_lay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/big_btn_backgroud_blue"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/header_setting_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/setting" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/tabs"
        android:background="@drawable/toolbar_shadow" />
</LinearLayout>