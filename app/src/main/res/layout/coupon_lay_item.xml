<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:orientation="vertical">

    <android.support.v7.widget.CardView android:id="@+id/coupon_item_lay"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="1dp"
                                        app:cardElevation="0px"
                                        app:cardMaxElevation="2px"
                                        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/coupon_left_v"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/coupon_left_v"
                android:background="@drawable/btn_background_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/coupon_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/red"
                        android:padding="5dp"
                        android:rotation="-30"
                        android:text="烤鱼券"/>
                    <TextView
                        android:id="@+id/coupon_name2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="15dp"

                        android:padding="5dp"
                        android:text="烤鱼券"
                        android:textColor="@color/red"/>
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/coupon_name2_tv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_center1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="有效期2017-9至2017-11通用"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/team_center2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="数量:x3"
                                android:textColor="@color/shangtongtianx_check_txt"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/team_center3_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="分店通用"
                                android:textColor="@color/shangtongtianx_check_txt"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/coupon_receive_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/already_receive"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="65dp"
                android:background="@color/shangtongtianx_edit_bg"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>