<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_item_lay_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/pos_item_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/message_item" />

            <LinearLayout
                android:id="@+id/pos_content_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/pos_item_icon"
                android:layout_centerVertical="true"
                android:gravity="center|left"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pos_item_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终端团队A队推广销售额"
                        android:textColor="@color/shangtongtianx_order_count_"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pos_item_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7月28日 20：09"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pos_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="+30"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="22sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>