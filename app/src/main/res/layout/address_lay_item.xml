<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="300dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/address_list_item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            app:cardBackgroundColor="#88BCBBBB"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/address_select_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/address_avatar_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_add_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/address_avatar_icon"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="李泽旭"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/address_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/address_name_tv"
                        android:text="176097643356"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_add_tv"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="广东省 深圳市 南山区 粤海街道"
                        android:textColor="@color/shangtongtianx_txt"
                        android:textSize="14sp" />

                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/address_default_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/select"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>