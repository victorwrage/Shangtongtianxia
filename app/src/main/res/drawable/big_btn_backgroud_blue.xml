<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#226A6A6A"
                android:startColor="#226A6A6A" />
            <size android:height="40dp" android:width="320dp" />

        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#226A6A6A"
                android:startColor="#226A6A6A" />
            <size android:height="40dp" android:width="320dp" />

        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#00D2691E"
                android:startColor="#00D2691E" />
            <size android:height="40dp" android:width="320dp" />

        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="#226A6A6A"
                android:startColor="#226A6A6A" />
            <size android:height="40dp" android:width="320dp" />

        </shape>
    </item>
</selector>
